//Recursive factorial
#include <stdio.h>
int fact(int);
void main()
{
int n,res;
printf("Factorial of a number using recursive function\n");
printf("Enter number\n");
scanf("%d", &n);
res=fact(n);
printf("Factorial of %d is %d\n", n, res);
return;
}

int fact(int n){
if(n==0||n==1)
return 1;
else 
return n*fact(n-1);
}
